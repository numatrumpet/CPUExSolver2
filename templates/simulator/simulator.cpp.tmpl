#define toggle_endian(data) ((data << 24) | ((data << 8) & 0x00ff0000) | ((data >> 8) & 0x0000ff00) | ((data >> 24) & 0x000000ff))

% if config.constTableType != "no_use":
//-----------------------------------------------------------------------------
//
// 定数テーブルをヒープに書き込む
//
//-----------------------------------------------------------------------------
void initializeHeap()
{
	% if config.constTableType == "writeSize":
	// バイナリの最初の１ワード目に定数テーブルのサイズが書かれている
	int heapSize = ${"toggle_endian(ROM[0])" if config.endian == "BIG" else "ROM[0]"};
	pc += ROM_ADDRESSING_UNIT;
//	cerr << "heapSize = " << heapSize << endl;
	while (heapSize > 0)
	{
		assert(rom_addr(pc) >= 0);
		assert(rom_addr(HR) >= 0);
		RAM[addr(HR)] = ${"toggle_endian(ROM[rom_addr(pc)])" if config.endian == "BIG" else "ROM[rom_addr(pc)]"};
		heapSize -= ADDRESSING_UNIT;
		HR += ADDRESSING_UNIT;
		pc += ROM_ADDRESSING_UNIT;
	}
	% elif config.constTableType == "toTag":
	// constTableTagが来るまでを定数テーブルとする
	assert(rom_addr(pc) >= 0);
	while (${"toggle_endian(ROM[rom_addr(pc)])" if config.endian == "BIG" else "ROM[rom_addr(pc)]"} != ${config.tag})
	{
		assert(rom_addr(pc) >= 0);
		assert(rom_addr(HR) >= 0);
		RAM[addr(HR)] = ${"toggle_endian(ROM[rom_addr(pc)])" if config.endian == "BIG" else "ROM[rom_addr(pc)]"};
		HR += ADDRESSING_UNIT;
		pc += ROM_ADDRESSING_UNIT;
	}
	pc += ROM_ADDRESSING_UNIT;
	% endif
}

